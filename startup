#!/bin/bash

if [[ -r $HOME/.optional-startup ]]; then
    $HOME/.optional-startup
fi

# compositor
if [ -x "$(command -v xcompmgr)" ]; then
  xcompmgr -CfFn &> /dev/null &
fi

# wallpaper
if [ -x "$(command -v feh)" ]; then
  feh --bg-fill "$HOME/.wallpaper"
fi

# filter screen
redshift-gtk &> /dev/null &

# aria2
aria2c

# volume icon
volumeicon &> /dev/null &

# battery icon
cbatticon &> /dev/null &

# networkmanager
nm-applet &> /dev/null &

# ibus
killall -9 fcitx
fcitx &> /dev/null &

# Xresource
xrdb -merge "$HOME/.Xresources"

# fix mouse xmonad
xsetroot -cursor_name left_ptr

# set keyboard speed
xset r rate 250 25

# turn off screen after 5 minutes
xset dpms 300

# init lockscreen
xautolock -detectsleep -locker "slock" &> /dev/null &

# lock screen after suspend or hibernate
killall -9 xss-lock
xss-lock -- "lockscreen" &> /dev/null &

# polkit
lxpolkit &> /dev/null &

# udiskie automount
udiskie -Cansf $(which thunar) &> /dev/null &

# notification daemon
dunst &> /dev/null &

# clipboad manager
parcellite &> /dev/null &

# caffeine
caffeine &> /dev/null &

# bluetooth
blueman-applet &> /dev/null &

# gnome keyring
eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)
